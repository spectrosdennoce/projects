{% extends "Header-Footer.html.twig" %}
    {% block body %}
        <div class="container">
            {% if utils.getID() is defined %}
                {% if utils.getAdmin() == 1 %}
                    {% include "MenuForAdmin.html.twig" %}
                {% else %}
                    {% for formulaire in formulaires %}
                        {% if loop.index0 % 4 == 0 %}
                            <div class="row">
                        {% endif %}
                        <a class="btn btn-outline-link col-sm-3" href="/Formulaire/Read/{{ formulaire.getSlug() }}" role="button">
                            <div class="card">
                                <div class="card-inner">
                                    <div class="header">
                                        <h3>{{formulaire.getTitre()}}</h3>
                                    </div>
                                    <div class="image">
                                        <img src="{{ asset('template.png') }}" alt="">
                                    </div>
                                    <div class="content">
                                        <h5>{{formulaire.getIdUtilsCrea().getPrenom()}}</h5>
                                        <span>{{formulaire.getDateCrea()|date("d/m/Y")}}</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% endfor %} 
                {% endif %}
            {% endif %}
    {% endblock %}
    {% block javascripts %}{% endblock %}