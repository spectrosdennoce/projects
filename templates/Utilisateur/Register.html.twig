<div class="modal fade" id="Register" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Register</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form method="POST">
          <div class="form-group">
            <label for="T_Pseudo">Pseudonyme</label>
	          <div class="input-group">
              <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-user"></i></span>
              </div>
              <input name="T_Pseudo" class="form-control" type="text" placeholder="Pseudonyme" required="required" value=""/>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="T_Nom">Nom</label>
              <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                </div>
                <input name="T_Nom" class="form-control" type="text" placeholder="Nom" required="required" value=""/>
              </div>
            </div>
              <div class="form-group col-md-6">
                <label for="T_Prenom">Prenom</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fa fa-user"></i></span>
                  </div>
                  <input name="T_Prenom" class="form-control" type="text" placeholder="Prenom" required="required" value=""/>
                </div>
              </div>
          </div>
          <div class="form-group">
            <label for="T_Email">Email</label>
	          <div class="input-group">
              <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-envelope"></i></span>
              </div>
              <input name="T_Email" class="form-control" type="EMAIL" placeholder="Email" required="required" value=""/>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="T_Mdp">mot de passe</label>
              <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                </div>
                <input name="T_Mdp" id="password" class="form-control" type="password" placeholder="mot de passe" required="required" value=""/>
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="T_Confirmed_Mdp">Confirmation mot de passe</label>
              <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                </div>
                <input name="T_Confirmed_Mdp" id="cpassword" class="form-control" type="password" required="required" placeholder="Confirmation mot de passe" value=""/>
              </div>
            </div>
          </div>
          <div class="form-group">
            <button name="save" id="submit" value="register" class="btn btn-info"disabled> Validate</button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal" data-toggle="modal" data-target="#Login">Login</button>
        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% block javascripts %}
<script>
$(document).ready(function(){
    $("#password").keyup(function (event) {
      if ($("#password").val() != $("#cpassword").val() & $("#password").val() != null) {
        $("#password").addClass("is-invalid").removeClass("is-valid");
        $("#cpassword").addClass("is-invalid").removeClass("is-valid");
        $("#submit").attr('disabled','disabled');
      } else {
        $("#password").addClass("is-valid").removeClass("is-invalid");
        $("#cpassword").addClass("is-valid").removeClass("is-invalid");
        $("#submit").removeAttr('disabled');
      }
    });
    $("#cpassword").keyup(function () {
      if ($("#password").val() != $("#cpassword").val() & $("#cpassword").val() != null) {
        $("#password").addClass("is-invalid").removeClass("is-valid");
        $("#cpassword").addClass("is-invalid").removeClass("is-valid");
        $("#submit").attr('disabled','disabled');
      } else {
        $("#password").addClass("is-valid").removeClass("is-invalid");
        $("#cpassword").addClass("is-valid").removeClass("is-invalid");
        $("#submit").removeAttr('disabled');
      }
    });
});
</script>
{% endblock %}